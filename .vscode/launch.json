    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - Сборка и отладка активного файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lab_03/build/main",
            "args": ["func_tests/pos_10_in.txt", "title", "Film four"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile folder for debugging",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}